<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: yield(:action) }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :username %><br />
    <%= f.text_field :username %>
  </div>

  <div class="field">
    <%= f.label :profile %><br />
    <%= f.text_area :profile %>
  </div>

  <div class="field">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
  </div>

  <% if controller.action_name == "edit" %>
    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div><%= t(".currently_waiting_confirmation_for_email", email: resource.unconfirmed_email) %></div>
    <% end %>
  <% end %>

  <div class="field">
    <%= f.label :image %><br />
    <%= f.file_field :image %>
  </div>

  <div class="field">
    <%= f.label :password %>
    <% if controller.action_name == "edit" %>
      <%= t("devise.registrations.edit.leave_blank_if_you_don_t_want_to_change_it") %><br />
    <% end %>
    <% if @minimum_password_length %>
    <%= @minimum_password_length %><%= t("devise.registrations.edit.characters_minimum") %>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password" %>
  </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
  </div>

  <% if controller.action_name == "edit" %>
    <div class="field">
      <%= f.label :current_password %> <%= t("devise.registrations.edit.we_need_your_current_password_to_confirm_your_changes") %><br />
      <%= f.password_field :current_password, autocomplete: "current-password" %>
    </div>
  <% end %>

  <div class="actions">
    <%= f.submit "#{yield(:submit_text)}" %>
  </div>
<% end %>
