<% provide(:title, @title) %>
<h1>Users#show</h1>
<section class="user_show fdb-block fp-active" data-block-type="testimonials" data-id="1">
  <div class="container">
    <div class="fdb-box">
      <% @users.each do |user| %>
        <%= link_to user.username, user %>
        <%= user.email %>
      <% end %>
    </div>
    <section class="stats">
      <%= render 'shared/stats' %>
    </section>
    <%= render 'follow_form' if user_signed_in? %>
  </div>
</section>
